@model BookManagement.Models.AssociateViewModel

<h1>Associate Attendee with genre</h1>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div class="form-group">
				<label for="bookId">Book:</label>
				@Html.DropDownListFor(m => m.BookId, ViewBag.Books as SelectList, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<label for="genreId">Genre:</label>
				@Html.DropDownListFor(m => m.GenreId, ViewBag.Genres as SelectList, new { @class = "form-control" })
			</div>
			<button type="submit" class="btn btn-primary">Associate</button>
		</form>
	</div>
</div>